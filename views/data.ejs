<html>
        <head>
          <script type="text/javascript" src="lib/jquery.js"></script>
          <script type="text/javascript">
            $.ajaxSetup({cache:false});//ajax调用不使用缓存
            function login(){
                var form=$("#login_form");
                if(form.is(":hidden")){
                    form.show();
                }else{
                    form.hide();
                }
            }
             function delete_path(){
                  var path=$('#delete_form').find("input[name='path']").val();
                  var lastPartIndex=path.lastIndexOf("/");
                  var parenPath=path.substring(0,lastPartIndex);

                  if(confirm("Are you sure want to delete "+path+"?")){
                        $.post("/delete",$('#delete_form').serialize(),function(rt){
                            alert(rt);
                            if(rt=='Delete ok'){
                               $(parent.document.body).find('#tree').attr('src', "tree?path="+parenPath);
                               window.location.href="get?path="+parenPath;
                            }
                        });
                  }
             }

            function edit(){
               <% if(user) { %>
               var value=$("#data").val();
               $("#data_container").html("<form id='edit_form' onsubmit='return;'>"+
                                          "<input type='hidden' name='path' value='<%= path %>'/>"+
                                          "<input type='hidden' name='version' value='<%= stat.version %>'/>"+
                                          " <input type='text' name='new_data' id='new_data' value='"+
                                           value+
                                          "'/>  </form>");

                $("#new_data").focus();
                $("#new_data").keypress(function(e){
                     if(e.keyCode==13){
                          var new_data=$("#new_data").val();
                          if(new_data!=value){
                            $.post("/edit",$("#edit_form").serialize(),function(data){
                                 alert(data);
                                 window.location.href="get?path=<%= path %>";
                            });
                          }else
                              $("#data_container").html(value);
                          return false;
                     }
              });
             <% } %>
            }


          </script>
        <head>
        <body>
                <div id='login'>
                  <% if(user) { %>
                    <strong>Welcome,<%= user %> </strong>
                  <% }else{ %>
                      <a href='#' onclick='login();'>login</a>
                      <div id='login_form' style='display:none;'>
                         <form method="post" action="/login">
                            name:
                           <input type="text" name="user[name]" />
                           password:
                           <input type="password" name="user[password]" />
                           <input type="submit" value="Submit" />
                         </form>
                      </div>
                  <% } %>
                </div>
                <p>path:<strong><%= path %> </strong> &nbsp;&nbsp;
                 <% if(user){ %>
                  <form id='delete_form' onsubmit="return;">
                    <input type='hidden' name='path' value='<%= path %>'/>
                    <input type='hidden' name='version' value='<%= stat.version %>'/>
                   <input type='button' value='delete' onclick="delete_path();"/>
                  </form>
                <% } %>
                </p>
                <p>stat:</p>
                <p>
                <table border="1">
                   <tr>
                     <td>name</td>
                     <td>value</td>
                   </tr>
                   <% for(var p in stat){ %>
                   <tr>
                     <td><%= p %></td>
                     <td><%= stat[p] %> </td>
                   </tr>
                   <%} %>
                </table>
                <p>data: </p>
                <input type='hidden' value='<%= data %>' id='data' />
                <div id='data_container' onclick='edit();'>
                  <%= data %>
                </div>
        </body>
</html>
